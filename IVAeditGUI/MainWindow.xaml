<Window x:Class="IVAeditGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVAeditGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="900">
  <Grid>
    <ComboBox x:Name="cbOperationSelector" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cbOperationSelector_SelectionChanged"/>
    <Grid x:Name="gridInputs" VerticalAlignment="Top" Margin="0,30,0,0" Height="100"></Grid>
    <TextBlock x:Name="tblckMessage" Text="" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="650" Height="25" TextWrapping="Wrap" TextAlignment="Center"/>
    <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Center" Margin="-105,160,0,0" VerticalAlignment="Top" Width="100" Click="btnRun_Click"/>
    <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Center" Margin="105,160,0,0" VerticalAlignment="Top" Width="100" Click="btnStop_Click" IsEnabled="False"/>
  </Grid>
</Window>
